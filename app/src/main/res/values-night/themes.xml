<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HBCConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tan_darker</item>
        <item name="colorPrimaryVariant">@color/tan_darker_darker</item>
        <item name="colorOnPrimary">@color/tan_lighter</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/plumb</item>
        <item name="colorSecondaryVariant">@color/plumb_darker</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColor">@color/light_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>
</resources>