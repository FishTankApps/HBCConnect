<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/livestreamVeiwerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/livestreamVeiwerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="20dp" />

    <LinearLayout
        android:id="@+id/videoPlayerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/livestream_viewer_background"
        android:orientation="vertical">

        <com.fishtankapps.hbcconnect.mobile.pageui.livestream.FacebookLivestreamViewer
            android:id="@+id/facebookVideoPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </com.fishtankapps.hbcconnect.mobile.pageui.livestream.FacebookLivestreamViewer>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="150dp"
        android:text="Got an idea of what could go here? Let us know at fishtankapps@gmail.com!"
        android:textSize="28sp" />
</LinearLayout>