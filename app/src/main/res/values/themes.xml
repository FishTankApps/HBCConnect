<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HBCConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tan_darker</item>
        <item name="colorPrimaryVariant">@color/tan</item>
        <item name="colorOnPrimary">@color/tan_lighter</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/plumb_lighter</item>
        <item name="colorSecondaryVariant">@color/plumb</item>
        <item name="colorOnSecondary">@color/plumb_darker</item>

        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.HBCConnect.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>

    <style name="Theme.HBCConnect.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HBCConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>